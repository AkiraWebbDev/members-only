<%= form_with model: @post do |form|%>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body%>
        <%= form.text_area :body, cols: 60, rows: 5, placeholder:"The secret message here..." %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>