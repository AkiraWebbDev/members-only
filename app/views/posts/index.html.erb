<h1>All Posts</h1>

<% if @posts.any? %>
    <% @posts.each do |post| %>
        <div class="post">
            <h2><%= post.title %></h2>
            <% if user_signed_in? %>
                <p>Author: <%= post.user.username %></p>
            <% end %>
            <p><%= post.body %></p>
            <p><%= link_to 'Show', post_path(post) %></p>
        </div>
    <% end %>
<% else %>
    <p>Be the first to make a post!</p>
<% end %>

<%= link_to 'New Post', new_post_path %>
